<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/jobTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/jobDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/jobTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/jobRequirements"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:chipSpacing="8dp"
        app:singleLine="false"
        app:layout_constraintTop_toBottomOf="@id/jobDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ProgressBar
        android:id="@+id/jobSalaryRange"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="100"
        app:layout_constraintTop_toBottomOf="@id/jobRequirements"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ratingCircle"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <TextView
        android:id="@+id/jobSalaryText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Salary: 85k"
        app:layout_constraintTop_toBottomOf="@id/jobSalaryRange"
        app:layout_constraintStart_toStartOf="@id/jobSalaryRange"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/ratingCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorSize="80dp"
        app:trackThickness="4dp"
        app:indicatorColor="#00ccff"
        android:progress="75"
        android:rotation="90"
        app:layout_constraintTop_toTopOf="@id/jobTitle"
        app:layout_constraintBottom_toBottomOf="@id/jobRequirements"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/jobSalaryRange"/>

    <!-- TextView to display the progress -->
    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="75%"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        app:layout_constraintBottom_toBottomOf="@id/ratingCircle"
        app:layout_constraintEnd_toEndOf="@id/ratingCircle"
        app:layout_constraintStart_toStartOf="@id/ratingCircle"
        app:layout_constraintTop_toTopOf="@id/ratingCircle" />


</androidx.constraintlayout.widget.ConstraintLayout>
